</nav>
<div class="row">
    <% for(let i=0; i<artikal.length; i++) {%>


        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <div class="bg-white rounded shadow-sm"><img src="<%= slika %>" alt="" id = "slika" class="img-fluid card-img-top">
                <div class="p-4">
                    <h5> <a href="#" class="text-dark"><%= artikal[i].naziv%></a></h5>
                    <p class="small text-muted mb-0"><%= artikal[i].naziv%></p>
                    <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                        <p class="small mb-0"><i class="fa fa-picture-o mr-2"></i><span class="font-weight-bold">Cijena</span></p>
                        <div class="badge badge-warning px-3 rounded-pill font-weight-normal"><%= artikal[i].cijena%>KM</div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">

                            <button type="submit" class="btn-sm btn-outline-warning" id="korpaAjax"
                            onclick="posaljiPodatke('<%= artikal[i].idartikal%>')">Dodaj u korpu</button>

                    </div>
                </div>
            </div>
        </div>

    <% } %>

    <script>
        function posaljiPodatke(artikal) {
            $.ajax({
                url: "/kupac/dodaj/" + artikal,
                method: 'POST',
